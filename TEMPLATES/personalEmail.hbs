{{! TEMPLATES/personalEmail.hbs }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{{subject}}</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      background-color: #0a0a0a;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      color: #e0e0e0;
      padding: 40px 16px;
    }
    .wrapper {
      max-width: 520px;
      margin: 0 auto;
    }

    /* ── Logo bar ── */
    .logo-bar {
      text-align: center;
      margin-bottom: 28px;
    }
    .logo-bar span {
      font-size: 18px;
      font-weight: 700;
      letter-spacing: -0.5px;
      color: #ffffff;
    }
    .logo-bar span em {
      font-style: normal;
      color: #6366f1;
    }

    /* ── Card ── */
    .card {
      background: #141414;
      border: 1px solid #242424;
      border-radius: 20px;
      overflow: hidden;
    }

    /* ── Top accent bar ── */
    .accent-bar {
      height: 3px;
      background: linear-gradient(90deg, #6366f1, #8b5cf6, #06b6d4);
    }

    /* ── Body ── */
    .body {
      padding: 32px 36px;
    }

    /* ── Subject pill ── */
    .subject-pill {
      display: inline-block;
      font-size: 11px;
      font-weight: 600;
      letter-spacing: 0.8px;
      text-transform: uppercase;
      color: #6366f1;
      background: rgba(99,102,241,0.1);
      border: 1px solid rgba(99,102,241,0.2);
      border-radius: 99px;
      padding: 4px 12px;
      margin-bottom: 20px;
    }

    /* ── Message ── */
    .message {
      font-size: 14.5px;
      line-height: 1.85;
      color: #aaa;
      white-space: pre-line;
    }
    .message strong {
      color: #fff;
      font-weight: 600;
    }

    /* ── Divider ── */
    .divider {
      border: none;
      border-top: 1px solid #1f1f1f;
      margin: 28px 0;
    }

    /* ── CTA ── */
    .cta-wrap {
      text-align: center;
      margin: 28px 0 8px;
    }
    .cta-btn {
      display: inline-block;
      padding: 13px 32px;
      background: #6366f1;
      color: #ffffff !important;
      font-size: 14px;
      font-weight: 600;
      border-radius: 12px;
      text-decoration: none;
      letter-spacing: 0.2px;
    }

    /* ── Signature ── */
    .signature {
      margin-top: 28px;
      padding-top: 24px;
      border-top: 1px solid #1f1f1f;
    }
    .sig-name {
      font-size: 14px;
      font-weight: 600;
      color: #fff;
    }
    .sig-role {
      font-size: 12px;
      color: #555;
      margin-top: 2px;
    }
    .sig-badge-wrap {
  text-align: center;     /* ✅ centers the inline-flex badge */
  margin-top: 12px;
}

.sig-badge {
  display: inline-flex;   /* stays inline-flex so it hugs content */
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  background: #1a1a1a;
  border: 1px solid #242424;
  border-radius: 8px;
  font-size: 12px;
  color: #666;
}

.sig-badge span {
  color: #6366f1;
  font-weight: 600;
}


    /* ── Footer ── */
    .footer {
      text-align: center;
      padding: 24px 16px 0;
      font-size: 11px;
      color: #333;
      line-height: 1.7;
    }
    .footer a {
      color: #444;
      text-decoration: underline;
    }

    /* ── Notice box (for failed payment etc.) ── */
    .notice {
      display: flex;
      align-items: flex-start;
      gap: 12px;
      background: rgba(16,185,129,0.05);
      border: 1px solid rgba(16,185,129,0.15);
      border-radius: 12px;
      padding: 14px 16px;
      margin: 20px 0;
    }
    .notice.warn {
      background: rgba(239,68,68,0.05);
      border-color: rgba(239,68,68,0.15);
    }
    .notice-icon { font-size: 16px; margin-top: 1px; }
    .notice-text { font-size: 13px; color: #aaa; line-height: 1.6; }
    .notice-text strong { color: #fff; }
  </style>
</head>
<body>
  <div class="wrapper">

    <!-- Logo -->
    <div class="logo-bar">
      <span>AcademicArk</span>
    </div>

    <!-- Card -->
    <div class="card">
      <div class="accent-bar"></div>

      <div class="body">

        <!-- Subject pill -->
        <div class="subject-pill">✦ Personal Message</div>

        <!-- Message -->
        <div class="message">{{{message}}}</div>

        <!-- Optional notice box -->
        {{#if noticeText}}
        <div class="notice {{#if noticeWarn}}warn{{/if}}">
          <div class="notice-icon">{{#if noticeWarn}}⚠️{{else}}✅{{/if}}</div>
          <div class="notice-text">{{{noticeText}}}</div>
        </div>
        {{/if}}

        <!-- CTA Button -->
        {{#if ctaText}}
        <hr class="divider"/>
        <div class="cta-wrap">
          <a href="{{ctaLink}}" class="cta-btn">{{ctaText}}</a>
        </div>
        {{/if}}

        <!-- Signature -->
        <div class="signature">
          {{!-- <div class="sig-name">Samir Suman</div>
          <div class="sig-role">Founder, AcademicArk</div> --}}
          <!-- wrap it in the centering div -->
<div class="sig-badge-wrap">
  <div class="sig-badge">
    <span>AcademicArk</span>
  </div>
</div>

        </div>

      </div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p>You're receiving this because you have an account on AcademicArk.</p>
      <p style="margin-top:6px;">
        <a href="{{unsubscribeLink}}">Unsubscribe</a> ·
        <a href="{{preferencesLink}}">Email Preferences</a>
      </p>
      <p style="margin-top:10px;">© 2026 AcademicArk · Greater Noida, India</p>
    </div>

  </div>
</body>
</html>
