<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{subject}}</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
        'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg,
          #f5f5f7 0%, #ffffff 100%);
      color: #333;
    }

    .email-wrapper {
      max-width:
        600px;
      margin: 0 auto;
      background: #fff;
    }

    .header-section {
      background:
        linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 40px 30px;
      text-align: center;
      color: white;
    }

    .header-section h1 {
      font-size: 32px;
      font-weight: 700;
      margin-bottom: 10px;
      letter-spacing: -0.5px;
    }

    .header-section p {
      font-size: 16px;
      opacity: 0.9;
      line-height: 1.5;
    }

    .hero-image {
      width: 100%;
      max-height: 350px;
      object-fit: cover;
      display:
        block;
    }

    .content {
      padding: 40px 30px;
    }

    .content p {
      font-size: 16px;
      line-height: 1.6;
      color: #555;
      margin-bottom: 25px;
    }

    /* Portrait
      screenshot for mobile */
    .screenshot-section {
      margin: 50px 0;
    }

    .screenshot-item {
      display: flex;
      flex-direction: column;
      align-items:
        center;
      margin-bottom: 40px;
    }

    .screenshot-item-image {
      width: 100%;
      display: flex;
      justify-content: center;
      margin-bottom: 15px;
    }

    .screenshot-item-image img {
      width: 170px;
      height: 370px;
      max-width:
        210px;
      max-height: 410px;
      aspect-ratio: 9 / 19.5;
      object-fit: cover;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.20);
      border: 2px solid rgba(0, 0, 0, 0.09);
      background: #111;
      display: block;
    }

    .screenshot-item-content {
      text-align: center;
      margin-top: 0.5em;
      max-width: 360px;
    }

    .screenshot-item-content h3 {
      font-size: 18px;
      font-weight: 700;
      color: #222;
      margin-bottom: 6px;
    }

    .screenshot-item-content p {
      font-size: 15px;
      color: #555;
      line-height:
        1.6;
      margin: 0;
    }

    .features-section {
      margin-top: 45px;
      padding-top: 35px;
      border-top: 1px solid #e5e5e5;
    }

    .features-section h2 {
      font-size: 23px;
      font-weight: 600;
      text-align: center;
      margin-bottom: 28px;
      color: #000;
    }

    .feature-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }

    .feature-card {
      padding: 18px;
      background: #f5f5f7;
      border-radius: 10px;
      text-align: center;
    }

    .feature-card-icon {
      font-size: 31px;
      margin-bottom:
        9px;
    }

    .feature-card h4 {
      font-size: 13px;
      font-weight: 600;
      color: #000;
      margin-bottom: 5px;
    }

    .feature-card p {
      font-size: 13px;
      color: #666;
      margin: 0;
      line-height: 1.4;
    }

    .cta-section {
      text-align: center;
      margin:
        40px 0;
    }

    .cta-button {
      display: inline-block;
      padding: 16px 40px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color:
        white !important;
      text-decoration: none;
      font-weight: 600;
      font-size:
        16px;
      border-radius: 50px;
      box-shadow: 0 4px 15px rgba(102, 126, 234,
          0.4);
      transition: all 0.3s ease;
    }

    .cta-button:hover {
      transform:
        translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
    }

    .footer {
      padding: 26px;
      text-align: center;
      background: #f5f5f7;
      font-size: 12px;
      color: #666;
      border-top: 1px solid #e5e5e5;
    }

    .footer a {
      color: #667eea;
      text-decoration: none;
    }

    @media (max-width: 620px) {
      .email-wrapper {
        max-width: 98vw;
        margin: 0 1vw;
      }

      .content,
      .header-section,
      .footer {
        padding: 18px 5vw;
      }

      .screenshot-item-image img {
        width: 140px;
        height: 280px;
      }
    }
  </style>
</head>

<body>
  <table width="100%" cellpadding="0" cellspacing="0" role="presentation" style="background: #f5f5f7;">
    <tr>
      <td align="center" style="padding: 20px 0;">
        <table width="600" cellpadding="0" cellspacing="0" role="presentation" class="email-wrapper">
          <!-- HEADER -->
          <tr>
            <td class="header-section">
              <h1>{{subject}}</h1>
              {{#if message}}
              <p>{{{message}}}</p>
              {{/if}}
            </td>
          </tr>
          {{#if headerImage}}
          <tr>
            <td>
              <img src="{{headerImage}}" alt="{{subject}}" class="hero-image" />
            </td>
          </tr>
          {{/if}}
          {{#if screenshots}}
          <tr>
            <td class="content">
              <div class="screenshot-section">
                {{#each screenshots}}
                <div class="screenshot-item">
                  <div class="screenshot-item-image">
                    <img src="{{this.imageUrl}}" alt="{{this.title}}" />
                  </div>
                  <div class="screenshot-item-content">
                    <h3>{{this.title}}</h3>
                    <p>{{this.description}}</p>
                  </div>
                </div>
                {{/each}}
              </div>
            </td>
          </tr>
          {{/if}}
          {{#if features}}
          <tr>
            <td class="content">
              <div class="features-section">
                <h2>✨ Key Features</h2>
                <div class="feature-grid">
                  {{#each features}}
                  <div class="feature-card">
                    <div class="feature-card-icon">{{this.icon}}</div>
                    <h4>{{this.title}}</h4>
                    <p>{{this.description}}</p>
                  </div>
                  {{/each}}
                </div>
              </div>
            </td>
          </tr>
          {{/if}}
          {{#if ctaText}}
          <tr>
            <td class="cta-section">
              <a href="{{ctaLink}}" class="cta-button">{{ctaText}}</a>
            </td>
          </tr>
          {{/if}}
          <tr>
            <td class="footer">
              <p style="margin-bottom: 10px;">© 2025 AcademicArk. All rights
                reserved.</p>
              <p>
                <a href="{{unsubscribeLink}}">Unsubscribe</a>
                •
                <a href="{{preferencesLink}}">Preferences</a>
              </p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>

</html>